<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.burakakdeniz.moviemates">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/ic_movie_black"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/ic_movie_black"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".ui.activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.LoginActivity"
            android:theme="@style/SplashTheme" />
        <activity android:name=".ui.activity.MainActivity" />
        <activity android:name=".ui.activity.AddActivity" />
        <activity android:name=".ui.activity.EditActivity" />
        <activity android:name=".ui.activity.ImageActivity"
            android:theme="@style/SplashTheme"/>

    </application>

</manifest>